<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.spanglerware.termtracker.CourseDetailActivity">

    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Title"
                android:id="@+id/textView4"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/courseTitle"
                android:inputType="text"
                android:hint="Enter Title"
                android:layout_below="@+id/textView4"
                android:layout_alignRight="@+id/courseStart"
                android:layout_alignEnd="@+id/courseStart"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:id="@+id/textView5"
                android:layout_below="@+id/courseTitle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="43dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/courseStart"
                android:layout_below="@+id/textView5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date (Planned)"
                android:id="@+id/textView6"
                android:layout_below="@+id/courseStart"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="43dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/courseEnd"
                android:layout_below="@+id/textView6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Status"
                android:id="@+id/textView13"
                android:layout_marginTop="41dp"
                android:layout_below="@+id/courseEnd"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/courseStatus"
                android:layout_below="@+id/textView13"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mentor Name"
                android:id="@+id/textView8"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="41dp"
                android:layout_below="@+id/courseStatus" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/courseMentorName"
                android:inputType="text"
                android:hint="Enter Name"
                android:layout_below="@+id/textView8"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mentor Phone"
                android:id="@+id/textView9"
                android:layout_below="@+id/courseMentorName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="41dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/courseMentorPhone"
                android:inputType="text"
                android:hint="Enter Phone"
                android:layout_below="@+id/textView9"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mentor Email"
                android:id="@+id/textView10"
                android:layout_below="@+id/courseMentorPhone"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="41dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/courseMentorEmail"
                android:inputType="text"
                android:hint="Enter Email"
                android:layout_below="@+id/textView10"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Notes"
                android:id="@+id/buttonNotes"
                android:onClick="goNotes"
                android:layout_below="@+id/courseMentorEmail"
                android:layout_marginTop="41dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/button5"
                android:onClick="goSave"
                android:layout_alignTop="@+id/button6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:id="@+id/button6"
                android:onClick="goDelete"
                android:layout_marginTop="43dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/buttonNotes"
                android:layout_toRightOf="@+id/button5"
                android:layout_toEndOf="@+id/button5" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assessments"
                android:id="@+id/button7"
                android:onClick="goAssessmentList"
                android:layout_below="@+id/button5"
                android:layout_marginTop="41dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Alert"
                android:id="@+id/button13"
                android:onClick="goStartAlert"
                android:layout_alignTop="@+id/textView5"
                android:layout_toRightOf="@+id/courseStart"
                android:layout_toEndOf="@+id/courseStart" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Alert"
                android:id="@+id/button14"
                android:onClick="goEndAlert"
                android:layout_alignTop="@+id/textView6"
                android:layout_toRightOf="@+id/courseEnd"
                android:layout_toEndOf="@+id/courseEnd" />

</RelativeLayout>